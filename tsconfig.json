{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "isolatedDeclarations": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "package/*"
      ],
      "@/shared/*": [
        "package/shared/*"
      ],
      "@/react-virtual-scrolling/*": [
        "package/react-virtual-scrolling/*"
      ],
      "@/vue-virtual-scrolling/*": [
        "package/vue-virtual-scrolling/*"
      ]
    }
  },
  "include": [
    "package/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
